<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nandy.bookreminder">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="book.reminder.nandy.bookreminder.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="book.reminder.nandy.bookreminder.ManualActivity" />
        <activity android:name="book.reminder.nandy.bookreminder.AllBooksList" />
        <activity android:name="book.reminder.nandy.bookreminder.DisplayBookDetails" />
        <activity android:name="book.reminder.nandy.bookreminder.UpdateUserID" />
        <activity android:name="book.reminder.nandy.bookreminder.ReturnBook" />
        <receiver android:name="book.reminder.nandy.bookreminder.AlarmReceive" />

    </application>

</manifest>